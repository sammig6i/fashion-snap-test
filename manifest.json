{
  "manifest_version": 3,
  "name": "Zara Virtual Try-On",
  "version": "1.0",
  "description": "Virtually try on clothes from Zara",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://*.zara.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.zara.com/*"],
      "js": ["content.js"]
    }
  ]
}
